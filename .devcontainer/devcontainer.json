{
    "name": "C4C SDL Plotter Competition",
    "image": "mcr.microsoft.com/devcontainers/universal:latest",
    
    // THIS IS THE MAGIC FIX: Adds a virtual desktop (GUI) to the container
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "version": "latest"
        }
    },

    // Re-install the SDL libraries automatically when the container builds
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libsdl2-dev libsdl2-image-dev libsdl2-ttf-dev",

    "forwardPorts": [6080, 5901],
    "portsAttributes": {
        "6080": {
            "label": "Desktop (noVNC)",
            "onAutoForward": "notify"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    }
}